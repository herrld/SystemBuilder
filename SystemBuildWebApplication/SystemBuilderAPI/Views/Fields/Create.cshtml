@model SystemBuilderDataModels.Field
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

    <div class="form-horizontal">
        <h4>Field</h4>

        <hr />

        @Html.ValidationSummary(true,"",new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Name", htmlAttributes: new { @class="control-label col-md-2"})

            @Html.LabelFor(model => model.FieldTypeId, "Field Type", htmlAttributes : new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.FieldTypeId, (IEnumerable<SelectListItem>)ViewBag.FieldTypeId)
        </div>
    </div>
}

